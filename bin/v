#!/usr/bin/env python

"""
vLab runner
"""
import time

from vlab.vlab import Vlab

if __name__ == "__main__":
    lab = Vlab()
    lab.startAll()

    print 'Lab started.'
    for i in xrange(100, 0, -1):
        print("Lab stopping in {} seconds".format(str(i)))
        time.sleep(1)
    lab.stopAll()
